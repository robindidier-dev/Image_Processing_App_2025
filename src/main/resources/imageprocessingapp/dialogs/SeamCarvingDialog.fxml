<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane styleClass="root-pane"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
      fx:controller="imageprocessingapp.controller.SeamCarvingDialogController"
          prefWidth="300"
          prefHeight="150"
          stylesheets="@../style/SeamCarvingDialog.css">

    <!-- Hauteurs fixes pour compacter la boÃ®te -->
    <rowConstraints>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="40"/>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="40"/>
        <RowConstraints prefHeight="30"/>
    </rowConstraints>

            <columnConstraints>
        <ColumnConstraints percentWidth="40" halignment="CENTER"/>
        <ColumnConstraints percentWidth="60" halignment="CENTER"/>
            </columnConstraints>

    <!-- Label pour la largeur -->
    <Label text="New width (in pixels)"
           GridPane.rowIndex="0"
           GridPane.columnIndex="0"
           GridPane.columnSpan="2"
           style="-fx-font-size: 12px; -fx-text-fill: #555; -fx-padding: 0;"
           alignment="CENTER"/>

    <!-- Slider pour la largeur -->
    <Slider fx:id="widthSlider"
            min="1" max="1000" value="100"
            majorTickUnit="250" minorTickCount="0"
            showTickMarks="true" showTickLabels="true"
            snapToTicks="false"
            blockIncrement="10"
            prefWidth="220" minWidth="140" maxWidth="220"
            GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"
            GridPane.hgrow="NEVER"
            styleClass="seamSlider" />

    <!-- Label pour la hauteur -->
    <Label text="New height (in pixels)"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0"
           GridPane.columnSpan="2"
           style="-fx-font-size: 12px; -fx-text-fill: #555; -fx-padding: 0;"
           alignment="CENTER"/>

    <!-- Slider pour la hauteur -->
    <Slider fx:id="heightSlider"
            min="1" max="1000" value="100"
            majorTickUnit="250" minorTickCount="0"
            showTickMarks="true" showTickLabels="true"
            snapToTicks="false"
            blockIncrement="10"
            prefWidth="220" minWidth="140" maxWidth="220"
            GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"
            GridPane.hgrow="NEVER"
            styleClass="seamSlider" />

    <!-- Boutons -->
    <HBox GridPane.rowIndex="4"
          GridPane.columnIndex="0"
          GridPane.columnSpan="2"
          alignment="CENTER"
          spacing="8"
          styleClass="hbox">
        <Button fx:id="cancelButton" text="Cancel" minWidth="60" />
        <Button fx:id="okButton" text="Ok" minWidth="60" />
    </HBox>

    <!-- Barre de progression tout en bas -->
    <VBox spacing="5" alignment="CENTER"
          GridPane.rowIndex="5"
          GridPane.columnIndex="0"
          GridPane.columnSpan="2"
          style="-fx-padding: 15 0 0 0;">
        <ProgressBar fx:id="progressBar" prefWidth="250" visible="false" />
        <Label fx:id="progressLabel" text="0%" visible="false" />
    </VBox>

</GridPane>
